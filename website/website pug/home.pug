doctype html
html
  head
    title The Cafe
    link(rel='home', href='home.css')
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    // Add any necessary stylesheets and scripts here
  body
    header
      h1 The Cafe
      nav
        ul
          li
            a(href='home.html') Home
          li
            a(href='History.html') History
          li
            a(href='membership.html') Membership
          li
            a(href='settings.html') Settings
          li
