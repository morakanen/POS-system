  body
    header
      h1 The Cafe
      nav
        ul
          li: a(href='home.html') Home
          li: a(href='History.html') History
          li: a(href='membership.html') Membership
          li: a(href='settings.html') Settings
          li: a(href='#') LogOut
    head
      title Search Bar Example
    body
      form(action='/search', method='get')
        label(for='search') Search:
        input(type='search', id='search', name='q', placeholder='Search...')
        button(type='submit') Go
    main
    head
      header
        h1 Memberships
    head
      title Shopping Cart
      meta(charset='UTF-8')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      // Add any necessary stylesheets and scripts here
    body
      header
        h1 My Shopping Cart
      main
        section
          h2 Cart Items
          table
            thead
              tr
                th Item
                th Quantity
                th Price
                th Subtotal
            tbody
              tr
                td Product 1
                td 2
                td $9.99
                td $19.98
              tr
                td Product 2
                td 1
                td $19.99
                td $19.99
              tr
                td Product 3
                td 3
                td $14.99
                td $44.97
            tfoot
              tr
                td(colspan='3') Total:
                td $84.94
        section
          h2 Checkout
          form
            label(for='name') Name:
            input(type='text', id='name', name='name', required)
            br
            br
            label(for='email') Email:
            input(type='email', id='email', name='email', required)
            br
            br
            label(for='address') Address:
            input(type='text', id='address', name='address', required)
            br
            br
            label(for='payment') Payment method:
            select(id='payment', name='payment')
              option(value='credit') Credit card
              option(value='debit') Debit card
              option(value='paypal') PayPal
            br
            br
            input(type='submit', value='Place Order')
      section
