extends layout

block content
     h1 Add A User
     form(action="/addUser" method="post")
          label(for="username")
          input#username(type="text" name="username" placeholder="Username" required="" maxlength="30")
          br
          label(for="password")
          input#password(type="password" name="password" placeholder="Password" required="" maxlength="30")
          br
          input#adminbool(type="radio" name="admin" value="1")
          label(for="adminbool") admin
          input#adminbool(type="radio" name="admin" value="0")
          label(for="adminbool") not admin
          br
          input(type="submit" value="Add User")